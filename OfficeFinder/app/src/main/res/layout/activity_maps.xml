<android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">
    <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context="sk.stuba.fiit.officefinder.activities.MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/officePanelLayout"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone">
        <TextView
                tools:text="Office name"
                android:id="@+id/officeNameTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>
        <Button
                android:text="@string/select_parking_range"
                android:id="@+id/selectParkingRangeButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parkingPanelLayout"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"
            tools:visibility="visible">
        <SeekBar
                tools:text="Office name"
                android:id="@+id/parkingRangeSeekBar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:progress="1"/>
        <Button
                android:text="@string/find_parking"
                android:id="@+id/findParkingButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="?attr/actionModeShareDrawable"
            android:id="@+id/floatingActionButton"
            app:layout_anchor="@+id/map"
            app:layout_anchorGravity="bottom|right"
            android:layout_gravity="top|left"/>

</android.support.design.widget.CoordinatorLayout>